<div class="tile is-vertical">
  <div class="tile is-child box">
    <form {{action "onSubmit" question on="submit"}}>
      <div class="field">
        <label class="label">Question text</label>
        <div class="control">
          <Input type="text" class="input" @value={{question.title}} />
        </div>
      </div>

      <div class="field">
        <label class="label">Frequency</label>
        <div class="control">
          <p>
            Ask me every
            <Input type="number" class="input narrow" @value={{question.frequency}} />
            days.
          </p>
        </div>
      </div>
      <div class="field">
        <div class="control">
          <button type="submit" class="button is-info">Create</button>
        </div>
      </div>
    </form>
  </div>
</div>