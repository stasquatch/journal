<h2 class="title">{{date entry.createdAt}}</h2>
<form {{action "onSubmit" entry on="submit"}}>
  <div class="field">
    <label class="label">How do you feel today?</label>
    <div class="control">
      <Textarea class="textarea" @value={{entry.body}} />
    </div>
  </div>
  <div class="field">
    <label class="label">Rating</label>
    <div class="control">
      <div class="select">
        <select onchange={{action (mut entry.rating) value="target.value"}}>
          <option disabled>- Select -</option>
          {{#each (range 1 11) as |num|}}
            <option selected={{eq entry.rating num}}>{{num}}</option>
          {{/each}}
        </select>
      </div>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <button type="submit" class="button is-info">Create</button>
    </div>
  </div>
</form>